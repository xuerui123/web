        div.banner#carousel_1.ft-carousel
            ul.carousel-inner
                a(href='/guanjia')
                    li.banner1.carousel-item
                a(href='/kaiguan')
                    li.banner2.carousel-item
                a(href='/mensuo')
                    li.banner3.carousel-item
            div.helper
                div.mask-left
                div.mask-right
                a.prev.icon-arrow-a-left( href="javascript:void(0);" target="_self" )
                a.next.icon-arrow-a-right(href="javascript:void(0);" target="_self")
        div.project
            div.title
                p(style='font-size:36px;margin-bottom:10px;') 智能解决方案
                p(style='font-size:16px') 提供多元化智能解决方案
            div.left(style='margin-right:20px;')
                a(href='/solution?key=right')
                    img(src='/pcimg/index/project1.jpg')
