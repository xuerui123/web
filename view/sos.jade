html
    head
        meta(charset='utf-8')
        title
        link(rel='shortcut icon',type="image/x-icon",href='/pcimg/pugoing.ico')
        link(rel='stylesheet',href='/css/chuanglian.css')
        script(src='https://cdn.bootcss.com/jquery/2.0.1/jquery.min.js')
    body
        div.nav
            div.content
                div.logo
                    a(href='/index')
                        img(src='/pcimg/index/logo.svg')
                div.list
                    ul
                        li
                            a(href='/product').active 产品中心
                        li
                            a(href='/solution') 解决方案
                        li
                            a(href='/infrared') 红外码库
                        li
                            a(href='/open') 开放平台
                        li
                            a(href='/news') 最新资讯
                        li
                            a(href='/aboutUs') 关于我们
                        li
                            a(href='/join') 加盟合作
        div.top(style='background:url("../pcimg/sos/top.jpg") no-repeat center')
        div.top2
        div.top3
        div.box
            div.title
                p sos紧急按钮
            div.line
            div.explain
                div.left
                    p 一键求救按钮
                    p 操作简单，家中老人一键求救
                    p 联动系统，发送短信到主人手机
                div.right
                    img(src='../pcimg/sos/small.png')
            div.title
                p 主要参数
            div.line
            div.list
                ul
                    li
                        p 工作电压
                        span 3.0V
                    li
                        p 电池
                        span CR2032
                    li
                        p 无线通讯
                        span 433射频
                    li
                        p 发射电流
                        span ≤20mA
                    li
                        p 静态电流
                        span ≤1uA
                    li
                        p 发射功率
                        span ≤13dBm
                    li
                        p 发射距离
                        span ≥100米（空旷地）

        include bottom
